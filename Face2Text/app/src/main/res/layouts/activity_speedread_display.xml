<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    orientation="vertical" layout_width="match_parent"
    layout_height="match_parent">

    <TextView
        layout_width="wrap_content"
        layout_height="wrap_content"
        textAppearance="?android:attr/textAppearanceLarge"
        text="B"
        id="@+id/textView3"
        layout_centerVertical="true"
        layout_toLeftOf="@+id/mCenterAnchor"
        textColor="#ff0000" />

    <TextView
        layout_width="wrap_content"
        layout_height="wrap_content"
        textAppearance="?android:attr/textAppearanceLarge"
        text="C"
        id="@+id/textView4"
        layout_centerVertical="true"
        layout_toRightOf="@+id/textView3"
        layout_toEndOf="@+id/textView3" />

    <TextView
        layout_width="wrap_content"
        layout_height="wrap_content"
        textAppearance="?android:attr/textAppearanceLarge"
        text="A"
        id="@+id/textView5"
        layout_centerVertical="true"
        layout_toLeftOf="@+id/textView3"
        layout_toStartOf="@+id/textView3" />

    <ImageView
        layout_width="wrap_content"
        layout_height="wrap_content"
        id="@+id/imageView"
        src="@drawable/guide_bar"
        layout_above="@+id/mCenterAnchor" />

    <ImageView
        layout_width="wrap_content"
        layout_height="wrap_content"
        id="@+id/imageView2"
        src="@drawable/guide_bar"
        layout_below="@+id/mCenterAnchor" />

</RelativeLayout>